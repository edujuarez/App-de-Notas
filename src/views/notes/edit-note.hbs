<div class="col-md-4 mx-auto">
<div class="card">
        <div class="card-header">
            <h3>Editar Nota</h3>
        </div>
        <div class="card-body">
            <form action="/notes/edit-note/{{note.id}}?_method=PUT" method="POST">
            <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" name="title" placeholder="Titulo" class="form-control" value="{{note.title}}">
                </div>
                <div class="form-group">
                    <textarea placeholder="Descripcion" name="description" class="form-control" >{{note.description}}</textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">Guardar</button>
                </div>
            </form>
    
    </div>
</div>
</div>