<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header">
                Registro de cuenta
            </div>
            <div class="card-body">
                <form action="/users/signup" method="POST">
                    <div class="form-group">
                        <input type="text" value="{{name}}" class="form-control" name="name" placeholder="Nombre">
                    </div>
                    <div class="form-group">
                        <input type="email" value="{{email}}" class="form-control" name="email" placeholder="Email">
                    </div>
                    <div class="form-group">
                    <input type="password" value="{{password}}" class="form-control" name="password" placeholder="Contraseña">
                    </div>
                      <div class="form-group">
                        <input type="password" value="{{confirm_password}}" class="form-control" name="confirm_password" placeholder="Confirmar Contraseña">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block" >Registrar</button>
                        </div>
                    
                </form>
            </div>
        </div>
    </div>
</div>